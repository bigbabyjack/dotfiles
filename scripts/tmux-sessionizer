#!/usr/bin/env bash

# tmux-sessionizer - Fuzzy find and switch to project directories
# Based on ThePrimeagen's tmux-sessionizer

if [[ $# -eq 1 ]]; then
    selected=$1
else
    # List of directories to search for projects
    # Customize these paths to match your setup
    search_dirs=(
        ~/
        ~/workspace
    )

    # Find all directories and let user select with fzf
    selected=$(find "${search_dirs[@]}" -mindepth 1 -maxdepth 2 -type d 2>/dev/null | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

# If not in tmux and tmux is not running, start new session
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

# If session doesn't exist, create it detached
if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

# Switch to the session
if [[ -z $TMUX ]]; then
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi
